# DBMigrator Environment Configuration Example
# Copy this file to .env and set your actual values
# NEVER commit .env files to version control

# Database connection string
DB_CONNECTION=Host=localhost;Database=myapp_dev;Username=postgres;Password=your_password_here

# Alternative individual components (if DB_CONNECTION is not set)
DB_HOST=localhost
DB_DATABASE=myapp_dev
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_PORT=5432

# Development environment settings
DBMIGRATOR_ENVIRONMENT=development
DBMIGRATOR_MIGRATIONS_PATH=./migrations
DBMIGRATOR_LOG_LEVEL=Info

# Production environment settings (uncomment for production)
# DBMIGRATOR_ENVIRONMENT=production
# DBMIGRATOR_AUTO_BACKUP=true
# DBMIGRATOR_BACKUP_PATH=./backups
# DBMIGRATOR_LOG_FILE=./logs/dbmigrator.log

# Security settings
# DBMIGRATOR_REQUIRE_APPROVAL=true
# DBMIGRATOR_ALLOW_DESTRUCTIVE=false